							"                    \"type\": \"number\"",
							"                },",
							"            },",
							"        },",
							"    };",
							"    ",
							"    pm.response.to.be.ok;",
							"    pm.response.to.be.withBody;",
							"    pm.response.to.be.json;",
							"    ",
							"    var isValid = tv4.validate(pm.response.json(), schema);",
							"    if (isValid !== true) {",
							"        console.log(tv4.error);",
							"    }",
							"    pm.expect(isValid).to.be.true;",
							"});",
